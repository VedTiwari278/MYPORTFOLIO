<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Projects</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-900 text-white font-[Inter]">
    <div class="container mx-auto px-4 py-16">
      <h2
        class="text-4xl font-bold text-center mb-12 bg-gradient-to-r from-purple-500 to-pink-400 bg-clip-text text-transparent"
      >
        My Projects
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
        <% data.forEach(project => { %>
        <div
          class="bg-gray-800/50 p-6 rounded-xl backdrop-blur-sm border border-gray-700 hover:scale-[1.02] hover:shadow-2xl transition-all duration-300 ease-in-out hover:border-purple-500"
        >
          <h3 class="text-2xl font-semibold text-purple-400 mb-3">
            <%= project.title %>
          </h3>
          <p class="text-gray-300 mb-4"><%= project.description %></p>
          <div class="flex justify-between items-center">
            <a
              href="<%= project.github %>"
              target="_blank"
              class="text-sm text-blue-400 hover:underline"
              >View on GitHub</a
            >
            <a
              href="<%= project.live %>"
              target="_blank"
              class="bg-purple-500 hover:bg-purple-600 text-white px-4 py-2 rounded-lg text-sm transition"
              >Live Preview</a
            >
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
