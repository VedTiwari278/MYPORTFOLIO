<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Certifications</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-900 text-white font-[Inter]">
    <div class="container mx-auto px-4 py-16">
      <h2
        class="text-4xl font-bold text-center mb-12 bg-gradient-to-r from-yellow-400 to-orange-500 bg-clip-text text-transparent"
      >
        Certifications
      </h2>

      <!-- Certifications Wrapper -->
      <div class="flex flex-col gap-8 items-center">
        <% data.forEach(function(cert) { %>
        <div
          class="w-full bg-gray-800/50 p-6 rounded-xl backdrop-blur-sm border border-gray-700 hover:scale-[1.02] hover:shadow-2xl transition-all duration-300 ease-in-out hover:border-yellow-400"
        >
          <h3
            class="text-2xl font-semibold text-yellow-400 mb-4 transition-colors duration-300 group-hover:text-white"
          >
            <%= cert.title %>
          </h3>
          <p
            class="text-gray-300 leading-relaxed group-hover:text-gray-100 transition-colors duration-300"
          >
            <%= cert.description %>
          </p>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
