<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        background: linear-gradient(135deg, #1e1e2f 0%, #2a2a4a 100%);
        min-height: 100vh;
      }
      .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
      }
      .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
      }
      .gradient-text {
        background: linear-gradient(to right, #60a5fa, #a78bfa);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
      }
      .btn-icon {
        transition: transform 0.3s ease;
      }
      .card:hover .btn-icon {
        transform: scale(1.2);
      }
    </style>
  </head>
  <body class="font-[Inter] text-white">
    <div class="container mx-auto px-4 py-16">
      <!-- Header -->
      <h1
        class="text-4xl md:text-5xl font-bold text-center mb-12 gradient-text drop-shadow-lg animate-fade-in"
      >
        Admin Dashboard
      </h1>

      <!-- Dashboard Cards -->
      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto"
      >
        <!-- Add Skill -->
        <a
          href="/admin/add-Skill"
          class="card bg-gradient-to-br from-blue-500/10 to-blue-700/10 hover:from-blue-500/20 hover:to-blue-700/20 text-white py-6 px-8 rounded-2xl text-center font-semibold shadow-md flex flex-col items-center justify-center space-y-3 border-blue-500/30"
        >
          <span
            class="btn-icon text-3xl bg-blue-500/20 p-3 rounded-full text-blue-300"
            >➕</span
          >
          <span class="text-lg">Add Skill</span>
        </a>

        <!-- Add Project -->
        <a
          href="/admin/add-project"
          class="card bg-gradient-to-br from-green-500/10 to-green-700/10 hover:from-green-500/20 hover:to-green-700/20 text-white py-6 px-8 rounded-2xl text-center font-semibold shadow-md flex flex-col items-center justify-center space-y-3 border-green-500/30"
        >
          <span
            class="btn-icon text-3xl bg-green-500/20 p-3 rounded-full text-green-300"
            >🚀</span
          >
          <span class="text-lg">Add Project</span>
        </a>

        <!-- Add Certification -->
        <a
          href="/admin/add-certificates"
          class="card bg-gradient-to-br from-yellow-400/10 to-yellow-600/10 hover:from-yellow-500/20 hover:to-yellow-600/20 text-white py-6 px-8 rounded-2xl text-center font-semibold shadow-md flex flex-col items-center justify-center space-y-3 border-yellow-500/30"
        >
          <span
            class="btn-icon text-3xl bg-yellow-500/20 p-3 rounded-full text-yellow-300"
            >📜</span
          >
          <span class="text-lg">Add Certification</span>
        </a>

        <!-- Add Education -->
        <a
          href="/admin/add-education"
          class="card bg-gradient-to-br from-pink-500/10 to-pink-700/10 hover:from-pink-600/20 hover:to-pink-800/20 text-white py-6 px-8 rounded-2xl text-center font-semibold shadow-md flex flex-col items-center justify-center space-y-3 border-pink-500/30"
        >
          <span
            class="btn-icon text-3xl bg-pink-500/20 p-3 rounded-full text-pink-300"
            >🎓</span
          >
          <span class="text-lg">Add Education</span>
        </a>

        <!-- Add Experience -->
        <a
          href="/admin/add-experience"
          class="card bg-gradient-to-br from-purple-500/10 to-purple-700/10 hover:from-purple-600/20 hover:to-purple-800/20 text-white py-6 px-8 rounded-2xl text-center font-semibold shadow-md flex flex-col items-center justify-center space-y-3 border-purple-500/30"
        >
          <span
            class="btn-icon text-3xl bg-purple-500/20 p-3 rounded-full text-purple-300"
            >💼</span
          >
          <span class="text-lg">Add Experience</span>
        </a>
      </div>

      <!-- Footer Note -->
      <p class="text-center text-gray-400 mt-12 text-sm">
        Designed with ❤️ for a seamless admin experience
      </p>
    </div>

    <!-- Tailwind Animation Utility -->
    <script>
      tailwind.config = {
        theme: {
          extend: {
            animation: {
              "fade-in": "fadeIn 1s ease-in-out",
            },
            keyframes: {
              fadeIn: {
                "0%": { opacity: "0", transform: "translateY(20px)" },
                "100%": { opacity: "1", transform: "translateY(0)" },
              },
            },
          },
        },
      };
    </script>
  </body>
</html>
