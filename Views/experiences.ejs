<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Experience</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-900 text-white font-[Inter]">
    <div class="container mx-auto px-4 py-16">
      <h2
        class="text-4xl font-bold text-center mb-12 bg-gradient-to-r from-green-400 to-cyan-500 bg-clip-text text-transparent"
      >
        Work Experience
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
        <% data.forEach(function(item) { %>
        <div
          class="bg-gray-800/50 p-6 rounded-xl backdrop-blur-sm border border-gray-700 hover:scale-[1.02] hover:shadow-2xl transition-all duration-300 ease-in-out hover:border-green-500"
        >
          <h3 class="text-xl font-semibold text-green-400 mb-1">
            <%= item.title %>
          </h3>
          <p class="text-sm text-gray-400 mb-2">
            @ <%= item.company %> â€¢ <%= item.duration %>
          </p>
          <p class="text-gray-300 leading-relaxed"><%= item.description %></p>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
